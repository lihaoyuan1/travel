.slider-wrapper
  .slider
    overflow hidden
    width 100%
    height 0
    padding-bottom 31.25%
    .img
      width 100%
      box-sizing border-box
  .dots
    position: relative
    text-align: center
    font-size: 0
    height 0.2rem
    line-height 0.2rem
    margin-top -0.2rem
    .dot
      display: inline-block
      margin: 0 0.08rem
      width: 0.12rem
      height: 0.12rem
      border-radius: 0.06rem
      background-color: rgba(255, 255, 255, 0.5)
    .active
      border-radius: 0.1rem
      width: 0.3rem
      background-color: rgba(255, 255, 255, 0.8)
