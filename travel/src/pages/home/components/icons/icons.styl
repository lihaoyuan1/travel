@import "~styles/variables.styl"
@import "~styles/mixins.styl"

.wrapper
  .slider
    overflow hidden
    width 100%
    height 0
    padding-bottom 44%
    .icons
      width 100%
      overflow hidden
      float left
      .icon
        position relative
        width 25%
        float: left
        padding-bottom 22%
        overflow hidden
        height 0
        .icon-img
          position absolute
          top 0
          left 0
          right 0
          bottom .40rem
          box-sizing border-box
          padding .1rem
          .img
            display block
            margin 0 auto
            height 100%
        .icon-desc
          position absolute
          left: 0
          right 0
          bottom 0
          font-size 14px
          height .40rem
          line-height .40rem
          color $dark-text-color
          text-align center
          ellipsis()
  .dots
    text-align: center
    font-size: 0
    padding 0.1rem 0
    .dot
      display: inline-block
      margin: 0 0.08rem
      width: 0.12rem
      height: 0.12rem
      border-radius: 0.06rem
      background-color: rgba(144,144,144,0.8)
    .active
      background-color: rgba(0, 175, 190, .8)
