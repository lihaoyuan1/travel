.slider-wrapper
  .slider
    overflow hidden
    width 100%
    height 0
    padding-bottom 30.47%
    .img
      width 100%
      float left
      box-sizing border-box
  .dots
    position: relative;
    text-align: center;
    font-size: 0;
    padding: .0.1rem 0;
    margin-top: -0.28rem;
    .dot
      display: inline-block;
      margin: 0 0.08rem;
      width: 0.16rem;
      height: 0.16rem;
      border-radius: 0.08rem;
      background-color: rgba(255, 255, 255, 0.5);
    .active
      border-radius: 0.1rem;
      width: 0.4rem;
      background-color: rgba(255, 255, 255, 0.8);
